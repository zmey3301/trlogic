.fade-enter-active
.fade-leave-active
  transition: opacity .5s

.fade-enter
.fade-leave-to
  opacity: 0

.fade-enter-to
.fade-leave
  opacity: 1

.slide-fade
  &-enter-active
  &-leave-active
    transition: opacity .35s, transform .4s

  &-enter
  &-leave-to
    opacity: 0

  &-enter-to
  &-leave
    opacity: 1

  &-enter
    transform: translate3d(-100%, 0, 0)
    &-to
      transform: translate3d(0, 0, 0)

  &-leave
    transform: translate3d(0, 0, 0)
    &-to
      transform: translate3d(100%, 0, 0)
